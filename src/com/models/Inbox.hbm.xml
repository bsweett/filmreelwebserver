<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

 
<hibernate-mapping>

    <class name="com.models.User" table="USER" lazy="false">

         <!-- A 36 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
            
        <id name="userIdPrimarKey" type="string" unsaved-value="null" >
            <column name="USER_ID_PRIMARY_KEY" sql-type="char(36)" not-null="true" />
             <generator class="org.hibernate.id.UUIDGenerator"/>
        </id>
		
		 <property name="email">
            <column name="EMAIL" sql-type="tinytext" not-null="true"/>
        </property>
        
        <property name="type">
            <column name="TYPE" sql-type="tinytext" not-null="true"/>
        </property>
        
        <property name="snap">
            <column name="SNAP" sql-type="blob" not-null="true"/>
        </property>
        
        <property name="sender">
            <column name="SENDER" sql-type="tinytext" not-null="true"/>
        </property>
        
         <property name="requestStatus">
            <column name="REQUESTSTATUS" sql-type="tinytext" not-null="true"/>
        </property>
       
    </class>

</hibernate-mapping>