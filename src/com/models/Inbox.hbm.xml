<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

 
<hibernate-mapping>

    <class name="com.models.Inbox" table="INBOX" lazy="false">

         <!-- A 36 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
            
        <id name="inboxIdPrimarKey" type="string" unsaved-value="null" >
            <column name="INBOX_ID_PRIMARY_KEY" sql-type="char(36)" not-null="true" />
             <generator class="org.hibernate.id.UUIDGenerator"/>
        </id>
		
		 <property name="receiverEmail">
            <column name="RECEIVER_EMAIL" sql-type="tinytext" not-null="true"/>
        </property>
        
        <property name="senderEmail">
            <column name="SENDER_EMAIL" sql-type="tinytext" not-null="true"/>
        </property>
        
        <property name="imageLocation">
            <column name="IMAGE_LOCATION" sql-type="tinytext" not-null="true"/>
        </property>
        
   		<many-to-one name="user" class="com.models.User" fetch="select" insert="false" update="false">
            <column name="USER_ID_FK" not-null="true" />
        </many-to-one>
       
    </class>

</hibernate-mapping>