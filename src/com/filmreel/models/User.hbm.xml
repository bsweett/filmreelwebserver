<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

 
<hibernate-mapping>

    <class name="com.models.User" table="USER" lazy="false">

         <!-- A 36 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
            
        <id name="userIdPrimarKey" type="string" unsaved-value="null" >
            <column name="USER_ID_PRIMARY_KEY" sql-type="char(36)" not-null="true" />
             <generator class="org.hibernate.id.UUIDGenerator"/>
        </id>
		
		<!-- The token is saved for a user. --> 
		
		 <property name="token">
            <column name="TOKEN" sql-type="tinytext" not-null="true"/>
        </property>
        
        <!-- The name is saved for a user. --> 
        
        <property name="name">
            <column name="NAME" sql-type="tinytext" not-null="true"/>
        </property>
        
        <!-- The email address is saved for a user. --> 
        
        <property name="emailAddress">
            <column name="EMAIL_ADDRESS" sql-type="tinytext" not-null="true"/>
        </property>
        
        <!-- The password is saved for a user. --> 
        
        <property name="password">
            <column name="PASSWORD" sql-type="tinytext" not-null="true"/>
        </property>
        
        <!-- The display picture is saved for a user. --> 
        
         <property name="displayPicturePath">
            <column name="PATH" sql-type="tinytext" not-null="true"/>
        </property>
       
       <!-- The location is saved for a user. --> 
       
        <property name="location">
            <column name="LOCATION" sql-type="tinytext" not-null="true"/>
        </property>
        
        <!-- The biography is saved for a user. --> 
        
        <property name="bio">
            <column name="BIO" sql-type="tinytext" not-null="true"/>
        </property>
        
        <!-- The gender is saved for a user. --> 
        
        <property name="gender">
            <column name="GENDER" sql-type="varchar(1)" not-null="true"/>
        </property>
        
        <!-- The popularity is saved for a user. --> 
        
         <property name="popularity">
            <column name="POPULARITY" sql-type="int" not-null="true"/>
        </property>
        
        <!-- The reel count is saved for a user. --> 
        
        <property name="reelCount">
            <column name="REEL_COUNT" sql-type="int" not-null="true"/>
        </property>
        
        <!-- The login count is saved for a user. --> 
        
        <property name="count">
            <column name="COUNT" sql-type="int" not-null="true"/>
        </property>
        
        <!-- The time stamp of when the user is created is saved for a user. --> 
        
        <property name="creationTimestamp" type="timestamp">
            <column name="CREATION_TIME" sql-type="timestamp" not-null="true" />
        </property>
        
        <!-- The time stamp of when the user was last updated is saved for a user. --> 
        
        <property name="lastUpdateTimestamp" type="timestamp">
            <column name="LAST_UPDATE_TIME" sql-type="timestamp" not-null="true" />
        </property>
        
        <!-- The time stamp of when the user is last active is saved for a user. --> 
        
         <property name="lastAccessedTimestamp" type="timestamp">
            <column name="LAST_ACCESSED_TIME" sql-type="timestamp" not-null="true" />
        </property>
        
        <!-- Each user has one to many inbox's mapped to them --> 
        
        <set name="inbox" table="INBOX" lazy="false" cascade="all">
    		<key column="USER_ID_FK" not-null="true"/>
    		<one-to-many class="com.models.Inbox"/>
		</set>
		
        <!--  Every user has many friends and every friend can also have many friends -->
        
		<set name="friends" table="USER_FRIEND_USER" lazy="false" cascade="all">
			<key column="USER_ID" />
			<!-- Note that hibernate uses the primary key of following class/table get value for column, which in this case
				happens to be another User-->
			<many-to-many column="FRIEND_USER_ID"  class="com.models.User" />
		</set>
    </class>

</hibernate-mapping>